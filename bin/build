#!/bin/bash
set -e

client_only=false
server_only=false

while test $# -gt 0; do
  case "$1" in
    -h|--help)
      echo 'options:'
      echo '-h, --help          show help'
      echo '--client-only       skip server build'
      echo '--server-only       skip client build'
      exit 0
      ;;
    --client-only)
      client_only=true
      shift
      ;;
    --server-only)
      server_only=true
      shift
      ;;
    *)
      break
      ;;
  esac
done

if [ "$server_only" == true ]; then
  echo $'\n\tâ©  client build skipped\n'
else
  echo $'\nğŸ§¹  rm -rf dist\n'
  rm -rf dist

  cd src/client
  echo $'\nğŸ“ '$(pwd)$'\n'

  echo $'\nğŸ› ï¸  npm install\n'
  npm install

  echo $'\nğŸ› ï¸  npm run build\n'
  npm run build

  echo $'\nğŸ› ï¸  npm run export:dist\n'
  npm run export:dist

  cd ../..
fi

if [ "$client_only" == true ]; then
  echo $'\n\tâ©  server build skipped\n'
else
  cd src/server
  echo $'\nğŸ“ '$(pwd)$'\n'

  echo $'\nğŸ› ï¸  npm install\n'
  npm install

  echo $'\nğŸ› ï¸  cp -r . ../../dist\n'
  cp -r . ../../dist

  cd ../..
fi

echo $'\nğŸ‰  build succeded!\n'